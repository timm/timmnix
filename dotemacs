(require 'lua-block)
 (lua-block-mode t)
 (defun lua-block-goto-corresponding-point ()
  "Jump to corresponding point."
  (interactive)
  (goto-char (lua-block-get-corresponding-point)))

(add-hook 'lua-mode-hook (lambda ()
                 (local-set-key (kbd "C-c C-b")
                        'lua-block-goto-corresponding-point)))

